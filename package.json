{
    "name": "pomotimer",
    "displayName": "PomoTimer",
    "description": "A fancy pomodoro timer in your status bar",
    "version": "0.1.0",
    "publisher": "afractal",
    "repository": {
        "type": "git",
        "url": "https://github.com/afractal/PomoTimer.git"
    },
    "bugs": {
        "url": "https://github.com/afractal/PomoTimer/issues"
    },
    "homepage": "https://github.com/afractal/PomoTimer",
    "icon": "assets/logo.png",
    "galleryBanner": {
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.10.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:pomotimer.displayTimer"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "PomoTimer configuration",
            "properties": {
                "pomotimer.workTime": {
                    "type": "number",
                    "default": 20
                },
                "pomotimer.breakTime": {
                    "type": "number",
                    "default": 5
                }
            }
        },
        "commands": [
            {
                "title": "Display Pomodoro Timer",
                "command": "pomotimer.displayTimer"
            },
            {
                "title": "Hide Pomodoro Timer",
                "command": "pomotimer.hideTimer"
            }
        ],
        "keybindings": [
            {
                "command": "pomotimer.displayTimer",
                "key": "ctrl+alt+d",
                "win": "ctrl+alt+d"
            },
            {
                "command": "pomotimer.hideTimer",
                "key": "ctrl+alt+h",
                "win": "ctrl+alt+h"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.41",
        "@types/node": "^6.0.40",
        "mocha": "^3.3.0",
        "typemoq": "^1.5.0",
        "typescript": "^2.3.2",
        "vscode": "^1.1.0"
    }
}