{
    "name": "pomotimer",
    "displayName": "PomoTimer",
    "description": "A fancy pomodoro timer in your status bar.",
    "version": "0.1.0",
    "publisher": "afractal",
    "license": "MIT",
    "homepage": "https://github.com/afractal/PomoTimer",
    "icon": "assets/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/afractal/PomoTimer.git"
    },
    "bugs": {
        "url": "https://github.com/afractal/PomoTimer/issues"
    },
    "galleryBanner": {
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.6.0",
        "node": ">=6.0.0"
    },
    "keywords": [
        "pomotimer",
        "time tracker",
        "pomodoro timer"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:pomotimer.displayTimer",
        "onCommand:pomotimer.displayTaskboard"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "PomoTimer configuration",
            "properties": {
                "pomotimer.workTime": {
                    "type": "number",
                    "default": 20
                },
                "pomotimer.breakTime": {
                    "type": "number",
                    "default": 5
                }
            }
        },
        "commands": [
            {
                "title": "Display Pomodoro Timer",
                "command": "pomotimer.displayTimer"
            },
            {
                "title": "Hide Pomodoro Timer",
                "command": "pomotimer.hideTimer"
            },
            {
                "title": "Display Taskboard",
                "command": "pomotimer.displayTaskboard"
            }
        ],
        "keybindings": [
            {
                "command": "pomotimer.displayTaskboard",
                "key": "ctrl+alt+t",
                "win": "ctrl+alt+t"
            },
            {
                "command": "pomotimer.displayTimer",
                "key": "ctrl+alt+d",
                "win": "ctrl+alt+d"
            },
            {
                "command": "pomotimer.hideTimer",
                "key": "ctrl+alt+h",
                "win": "ctrl+alt+h"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "cover": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./out/test/*"
    },
    "devDependencies": {
        "@types/chai": "^4.0.1",
        "@types/mocha": "^2.2.41",
        "@types/node": "^6.0.40",
        "@types/sharp-timer": "^1.0.0",
        "chai": "^4.0.2",
        "coveralls": "^2.13.1",
        "istanbul": "^0.4.5",
        "mocha": "^3.4.2",
        "mocha-lcov-reporter": "^1.3.0",
        "typescript": "^2.4.1",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "sharp-timer": "^0.1.0-b"
    }
}