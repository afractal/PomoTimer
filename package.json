{
    "name": "pomotimer",
    "displayName": "PomoTimer",
    "description": "Fancy pomodoro timer in your status bar",
    "version": "0.3.1",
    "publisher": "afractal",
    "license": "MIT",
    "homepage": "https://github.com/afractal/PomoTimer",
    "icon": "assets/logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/afractal/PomoTimer.git"
    },
    "bugs": {
        "url": "https://github.com/afractal/PomoTimer/issues"
    },
    "galleryBanner": {
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.6.0",
        "node": ">=6.0.0"
    },
    "keywords": [
        "pomotimer",
        "time tracker",
        "pomodoro timer"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:pomotimer.displayTaskboard",
        "onCommand:pomotimer.restartTimer",
        "onCommand:pomotimer.displayOrHideTimer",
        "onCommand:pomotimer.startOrPauseOrResume"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "PomoTimer configuration",
            "properties": {
                "pomotimer.workTime": {
                    "type": "number",
                    "default": 25
                },
                "pomotimer.breakTime": {
                    "type": "number",
                    "default": 5
                }
            }
        },
        "commands": [
            {
                "title": "Display Taskboard",
                "command": "pomotimer.displayTaskboard"
            },
            {
                "title": "Restart Pomodoro Timer",
                "command": "pomotimer.restartTimer"
            },
            {
                "title": "Display/Hide Timer",
                "command": "pomotimer.displayOrHideTimer"
            },
            {
                "title": "Start/Stop/Resume Pomodoro Timer",
                "command": "pomotimer.startOrPauseOrResume"
            }
        ],
        "keybindings": [
            {
                "command": "pomotimer.displayTaskboard",
                "key": "ctrl+alt+t",
                "win": "ctrl+alt+t",
                "mac": "cmd+alt+t"
            },
            {
                "command": "pomotimer.restartTimer",
                "key": "ctrl+alt+shift+r",
                "win": "ctrl+alt+shift+r",
                "mac": "cmd+alt+shift+r"
            },
            {
                "command": "pomotimer.displayOrHideTimer",
                "key": "ctrl+alt+d",
                "win": "ctrl+alt+d",
                "mac": "cmd+alt+d"
            },
            {
                "command": "pomotimer.startOrPauseOrResume",
                "key": "ctrl+alt+s",
                "win": "ctrl+alt+s",
                "mac": "cmd+alt+s"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "cover": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec ./out/test/*"
    },
    "dependencies": {
        "sharp-timer": "^0.1.4"
    },
    "devDependencies": {
        "@types/chai": "^4.1.3",
        "@types/mocha": "^5.2.0",
        "@types/node": "^10.0.0",
        "@types/sharp-timer": "^1.0.2",
        "chai": "^4.1.2",
        "coveralls": "^3.0.0",
        "istanbul": "^0.4.5",
        "mocha": "^5.1.1",
        "mocha-lcov-reporter": "^1.3.0",
        "typescript": "^2.8.3",
        "vscode": "^1.0.0"
    }
}
