{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "outDir": "out",
        "lib": [
            "es2017"
        ],
        "sourceMap": true,
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": ".",
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/inversify/dts"
        ]
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
